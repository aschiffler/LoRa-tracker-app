<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/statuBar">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rl_titlebar1"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentBottom="true">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/home_title"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/text_statu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="LA66 Not Detect"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:background="@drawable/bg_btn_greed"
            android:id="@+id/btn_Reconnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/text_statu1"
            android:text="Reconnect"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/text_statu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_statu1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="LoRaWAN：Offline"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:background="@drawable/bg_btn_greed"
            android:id="@+id/btn_Reconnection1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_statu1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/text_statu2"
            android:text="CHECK"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_below="@+id/text_statu2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_statu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="80dp"
                android:text="RSSI:"
                android:textColor="@color/black"
                android:textSize="14dp" />
            <LinearLayout
                android:gravity="center"
                android:layout_toLeftOf="@+id/img1"
                android:layout_below="@+id/text_statu3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:id="@+id/text_statu31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="36dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img1"
                android:layout_width="90dp"
                android:layout_height="72dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/text_statu3" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/text_statu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Timestamp"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <Switch
                android:id="@+id/btn_switch"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_below="@+id/text_statu4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <LinearLayout

                android:id="@+id/btn_location1"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_below="@+id/btn_switch"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uplink Interval（60s）"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/img_edit" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black999" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/input_at"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:theme="@style/MyEditText1" />

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:background="@color/black999" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:paddingHorizontal="5dp">

            <TextView
                android:id="@+id/btn_send_hex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_white"
                android:gravity="center"
                android:text="@string/text_code_send" />

            <TextView
                android:id="@+id/btn_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_greed"
                android:gravity="center"
                android:text="@string/text_send"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black999" />

    <!--    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
    <!--        android:id="@+id/swipeRefreshLayout"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:layout_weight="1">-->

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"></ListView>
    <!--    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black999" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_clear"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_btn_greed"
            android:gravity="center"
            android:text="clear"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_btn_greed"
            android:gravity="center"
            android:text="Exit"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>